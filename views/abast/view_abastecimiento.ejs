<%function textFormat(string){
    string = string.split(' ');
    for(var a=0; a < string.length; a++){
        string[a] = string[a].substring(0,1).toUpperCase() + string[a].substring(1,string[a].length).toLowerCase();
	}
	return string.join(' ');
}%>
