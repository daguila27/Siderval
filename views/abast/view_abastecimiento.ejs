	   if($("#buscar_abastecimiento-value").val() == '' || $("#buscar_abastecimiento-value").val() == null || $("#buscar_abastecimiento-value").val() == undefined){
           $("#buscar_abastecimiento-value").val($(this).data('searchcol')+"@"+$("#buscar_abastecimiento").val());
       }
