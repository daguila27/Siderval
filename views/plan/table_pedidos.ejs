    setDataTableFabricaciones("#DataTablePeds");
    $(".fixed_table").width( $("#DataTablePeds").width() );

    $(".fixed_table").css( 'left' ,$(".o_sub_menu").width() );

    $("#pietabla tr td").each(function(){
        if($(this).attr('id')){
            $(this).css('width', $("."+$(this).attr('id')).width());
        }
    });
