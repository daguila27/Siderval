<%function formatDate(date){
    var meses = [
        "Enero", "Febrero", "Marzo",
        "Abril", "Mayo", "Junio", "Julio",
        "Agosto", "Septiembre", "Octubre",
        "Noviembre", "Diciembre"];
    var dia = date.getDate();
    var mes = date.getMonth();
    var yyy = date.getFullYear();
    return dia + ' de ' + meses[mes] + ' de ' + yyy;
}%>
