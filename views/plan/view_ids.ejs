<script type="text/javascript">
    function showReg(){
        var all = 0;
        var selec = 0;
        $("#DataTableFabs tbody tr").each(function(){
            all++;
        });
        $("#DataTableFabs tbody tr.danger").each(function(){
            selec++;
        });
        $("#pedidos").html('<h5><small>Mostrando ' +all+ ' producto(s) ('+selec+' Seleccionados).</small></h5>');
    }
    var array_fill = [
        "Código@default",
        "Descripción@primary"
    ];
    var filtros_seleccionados = [];

    var idvista = "<%= idview%>";
    $(document).ready(function(){
        $(".up-fills").css('margin-top', $("#oe_main_menu_navbar").outerHeight());
        $.ajax({
            type: 'POST',
            data: {clave: filtros_seleccionados.join(','), token: $("#dateSelect").val()+"@"+idvista},
