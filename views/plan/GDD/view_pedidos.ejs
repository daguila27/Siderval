</div>

<script type="text/javascript">
	$(document).ready(function(){
		$.ajax({
			type: 'GET',
			url: '/plan/table_gdd/pedido.f_entrega-ASC',
			success: function(data){
				$(".main-page").html(data);
			}
		});
		$(".row-main").css('padding-top', $(".o_control_panel").css('height') );
	});
	$("#buscar_pedido").on('keyup', function(e){
		e.preventDefault();
		if($(".o_cp_switch_buttons .active").data('original-title') == 'Lista' ){
			$.ajax({
				type: 'POST',
				data: {clave: $(this).val(), orden: $(".o_cp_switch_buttons .active").data('view')},
				url: '/plan/buscar_pedido_list',
				success: function(data){
					$(".main-page").html(data);
				}
			});
		}
		else{
			$.ajax({
				type: 'GET',
				url: '/plan/buscar_pedido_item/'+$(this).val(),
				success: function(data){
					$(".main-page").html(data);
				}
			});		
		}
	});


	$('.view-option').on('click', function(e){
		e.preventDefault();
		$('.view-option').removeClass('active');
		$(this).addClass('active');
		$.ajax({
			type: 'GET',
			url: '/plan/'+$(this).data('view'),
			success: function(data){
				$(".main-page").html(data);
			}
		});

	});
	

</script>