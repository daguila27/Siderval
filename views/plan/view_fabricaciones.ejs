<div class="row row-main" style=" margin: 0; padding: 0;">
	
			
			<div class="col-sm-12 main-page" style="margin: 0; padding: 0; z-index: 5;">
				
			</div>


	
</div>

<script type="text/javascript">
	$(document).ready(function(){
		$.ajax({
			type: 'GET',
			url: '/plan/table_fabricaciones/fabricaciones.f_entrega-ASC/true',
			success: function(data){
				$(".main-page").html(data);
				//Muestra la cantidad de pedidos
				$("#pedidos").html("<h5><small>Mostrando " + $("#registros").text() + " pedido(s)</small></h5>");
			}
		});
		$(".row-main").css('padding-top', $(".o_control_panel").css('height') );
	});
	$("#buscar_fabricaciones").on('keyup', function(e){
		e.preventDefault();
		if($(".o_cp_switch_buttons .active").data('original-title') == 'Lista' ){
			$.ajax({
				type: 'POST',
				data: {clave: $(this).val(), orden: $(".o_cp_switch_buttons .active").data('view'), showPend: $("#pend").is(':checked')},
				url: '/plan/buscar_fabricaciones_list',
				success: function(data){
					$(".main-page").html(data);
					//Muestra la cantidad de pedidos
					$("#pedidos").html("<h5><small>Mostrando " + $("#registros").text() + " pedido(s)</small></h5>");
				}
			});
		}
		else{
			$.ajax({
				type: 'POST',
				data: {clave: $(this).val(),  showPend: $("#pend").is(':checked')},
				url: '/plan/buscar_fabricaciones_item',
				success: function(data){
					$(".main-page").html(data);
					//Muestra la cantidad de pedidos
					$("#pedidos").html("<h5><small>Mostrando " + $("#registros").text() + " pedido(s)</small></h5>");
				}
			});		
		}
	});


	$('.view-option').on('click', function(e){
		e.preventDefault();
		$('.view-option').removeClass('active');
		if($(this).data('original-title') == 'Lista'){
			$("#check_pendientes").css('display', 'inline');
		}
		else{
            $("#check_pendientes").css('display', 'none');
		}
		$(this).addClass('active');
		$.ajax({
			type: 'GET',
			url: '/plan/'+$(this).data('view')+"/"+$("#pend").is(':checked'),
			success: function(data){
				$(".main-page").html(data);
				if($(this).data('view') == 'table_fabricaciones/fabricaciones.f_entrega-ASC' || $(this).data('view')=='item_ofs') {
					//Muestra la cantidad de pedidos
					$("#pedidos").html("<h5><small>Mostrando " + $("#registros").text() + " pedido(s)</small></h5>");
				}
			}
		});

	});
	
	// Muestra la tabla antes de ver una OF
    function mostrar_tabla(){
        if($(".o_cp_switch_buttons .active").data('original-title') == 'Lista' ){
        	if($("#buscar_fabricaciones").val() == "" || $("#buscar_fabricaciones").val() == null) {
        		$.ajax({
					type: 'GET',
					url: '/plan/table_fabricaciones/fabricaciones.f_entrega-ASC/true',
					success: function(data){
						$(".main-page").html(data);
						//Muestra la cantidad de pedidos
						$("#pedidos").html("<h5><small>Mostrando " + $("#registros").text() + " pedido(s)</small></h5>");
					}
				});
				$(".row-main").css('padding-top', $(".o_control_panel").css('height') );
        	}
        	else{
        		$.ajax({
					type: 'POST',
					data: {clave: $("#buscar_fabricaciones").val(), orden: $(".o_cp_switch_buttons .active").data('view'), showPend: $("#pend").is(':checked')},
					url: '/plan/buscar_fabricaciones_list',
					success: function(data){
						$(".main-page").html(data);
						//Muestra la cantidad de pedidos
						$("#pedidos").html("<h5><small>Mostrando " + $("#registros").text() + " pedido(s)</small></h5>");
					}
				});
        	}
        }
        else {
        	$.ajax({
				type: 'POST',
				data: {clave: $("#buscar_fabricaciones").val(),  showPend: $("#pend").is(':checked')},
				url: '/plan/buscar_fabricaciones_item',
				success: function(data){
					$(".main-page").html(data);
					//Muestra la cantidad de pedidos
					$("#pedidos").html("<h5><small>Mostrando " + $("#registros").text() + " pedido(s)</small></h5>");
				}
			});
        }
    };

</script>