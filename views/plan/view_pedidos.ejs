	        </div>
		</div>
	</div>
</div>
<div class="row row-main" style=" margin: 0; padding: 0;">			
	<div class="col-sm-12 main-page" style="margin: 0; padding: 0; z-index: 5;"></div>
</div>

<script type="text/javascript">
	$(document).ready(function(){
		$.ajax({
			type: 'GET',
			url: '/plan/table_pedidos/pedido.f_entrega-ASC',
			success: function(data){
				$(".main-page").html(data);
				//Muestra la cantidad de pedidos
				$("#pedidos").html("<h5><small>Mostrando " + $("#registros").text() + " pedido(s)</small></h5>");
			}
		});
		$(".row-main").css('padding-top', $(".o_control_panel").css('height') );
	});
	$("#buscar_pedido").on('keyup', function(e){
		e.preventDefault();
		if($(".o_cp_switch_buttons .active").data('original-title') == 'Lista' ){
			$.ajax({
				type: 'POST',
				data: {clave: $(this).val(), orden: $(".o_cp_switch_buttons .active").data('view')},
				url: '/plan/buscar_pedido_list',
				success: function(data){
					$(".main-page").html(data);
					//Muestra la cantidad de pedidos
					$("#pedidos").html("<h5><small>Mostrando " + $("#registros").text() + " pedido(s)</small></h5>");
				}
			});
		}
		else{
			$.ajax({
				type: 'POST',
				data: {clave: $(this).val()},
				url: '/plan/buscar_odcs_item',
				success: function(data){
					$(".main-page").html(data);
					//Muestra la cantidad de pedidos
					$("#pedidos").html("<h5><small>Mostrando " + $("#registros").text() + " pedido(s)</small></h5>");
				}
			});		
		}
	});


	$('.view-option').on('click', function(e){
		e.preventDefault();
		$('.view-option').removeClass('active');
		$(this).addClass('active');
		$.ajax({
			type: 'GET',
			url: '/plan/'+$(this).data('view'),
			success: function(data){
				$(".main-page").html(data);
				if($(this).data('view') == 'table_pedidos/pedido.f_entrega-ASC' || $(this).data('view')=='item_odcs') {
					//Muestra la cantidad de pedidos
					$("#pedidos").html("<h5><small>Mostrando " + $("#registros").text() + " pedido(s)</small></h5>");
				}
			}
		});

	});
	

</script>