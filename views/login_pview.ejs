<div class="container">
    <h1 class="page-header" style="font-family: 'Oswald'">Seleccione una Etapa:</h1>
    <div class="row" style="padding: 0;margin: 0; width: 100%; margin-top: 50px; font-family: 'Oswald'">
        

        <%for(var t=0; t < faena.length; t++){
            if(t == faena.length-1){
        %>
            <div class="col-md-offset-4 col-sm-offset-4 col-sm-6 col-md-4 sel-proc" onclick="addId('<%=faena[t].value%>')" data-toggle="modal" data-target="#myModal">
                <div class="alert alert-success thumbnail">
                  <img src="" alt="">
                  <div class="caption">
                      <h1><%=faena[t].nombre_etapa%></h1>
                  </div>
                 </div>
              </div>
              
              <%}else{%>
                <div class="col-sm-6 col-md-4 sel-proc" onclick="addId('<%=faena[t].value%>')" data-toggle="modal" data-target="#myModal">
                <div class="alert alert-success thumbnail">
                  <img src="" alt="">
                  <div class="caption">
                      <h1><%=faena[t].nombre_etapa%></h1>
                  </div>
                 </div>
              </div>
        <%}}%>      
               
