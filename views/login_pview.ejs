<script type="text/javascript">
    $(document).ready(function(){
        if(<%=invalid%>){
            alert("PIN invalido.");
            $.ajax({
                type: 'GET',
                url: '/reset_sessionInv',
                success: function(data){
                    if(data == 'ok'){
                        console.log("bolean restaurado");
                    }               
                }
            });
        }

    });

    function addId(val){
        alert(val);
        $("#etapa").val(val);
    }


    $(".b-number").on('click', function(e){
        e.preventDefault();
        $(".pin-input input").val(''+$(".pin-input input").val()+$(this).data('valor'));
    });
    $(".del-number").on('click', function(e){
        e.preventDefault();
        $(".pin-input input").val(''+$(".pin-input input").val().substring(0, $(".pin-input input").val().length-1) );
    });
</script>



