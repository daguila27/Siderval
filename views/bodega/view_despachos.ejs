					    <option value="%Traslado%">Traslado</option>
					    <option value="%Anulado%">Anulado</option>
					    <option value="%Devolución%">Devolución</option>
					    <option value="%Otro%">Otro</option>
					    <option value="%Blanco%">Blanco</option>
					</select>
				</div>
	        </div>
		</div>
	</div>
</div>
<div class="row row-main" style=" margin: 0; padding: 0;">
	
			
			<div class="col-sm-12 main-page" style="margin: 0; padding: 0; z-index: 5;">
				
			</div>


	
</div>

<script type="text/javascript">
	$(document).ready(function(){
		$.ajax({
			type: 'GET',
			url: '/bodega/table_despachos/despachos.fecha-ASC',
			success: function(data){
				$(".main-page").html(data);
			}
		});
		$(".row-main").css('padding-top', $(".o_control_panel").css('height') );
	});

	function refreshTablaDespachos(yo){
		if($(".o_cp_switch_buttons .active").data('original-title') == 'Lista' ){
			$.ajax({
				type: 'POST',
				data: {clave: $("#buscar_despacho").val(), orden: $(".o_cp_switch_buttons .active").data('view'), tipo: $("#select_tipo_despacho").val()},
				url: '/bodega/buscar_despacho_list',
				success: function(data){
					$(".main-page").html(data);
				}
			});
		}
		else{
			/*$.ajax({
				type: 'GET',
				url: '/plan/buscar_pedido_item/'+$(this).val(),
				success: function(data){
					$(".main-page").html(data);
				}
			});*/		
		}
	}
	$("#buscar_despacho").on('keyup', function(e){
		e.preventDefault();
		if($(".o_cp_switch_buttons .active").data('original-title') == 'Lista' ){
			$.ajax({
				type: 'POST',
				data: {clave: $(this).val(), orden: $(".o_cp_switch_buttons .active").data('view'), tipo: $("#select_tipo_despacho").val()},
				url: '/bodega/buscar_despacho_list',
				success: function(data){
					$(".main-page").html(data);
				}
			});
		}
		else{
			/*$.ajax({
				type: 'GET',
				url: '/plan/buscar_pedido_item/'+$(this).val(),
				success: function(data){
					$(".main-page").html(data);
				}
			});*/		
		}
	});


	$('.view-option').on('click', function(e){
		e.preventDefault();
		$('.view-option').removeClass('active');
		$(this).addClass('active');
		$.ajax({
			type: 'GET',
			url: '/plan/'+$(this).data('view'),
			success: function(data){
				$(".main-page").html(data);
			}
		});

	});
	

</script>