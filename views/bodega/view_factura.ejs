<div class="row" style="margin: 0; padding: 0;">
	<div class="col-sm-12 o_control_panel" style="margin: 0; padding: 10px; display: flex; position: fixed; z-index: 10; width: 82.5%;">
		<ol class="breadcrumb" style="width: 46%; padding: 10px 2px 0px 20px">
			<li class="active">Facturas</li>
		</ol>
		<div style="width: 50%;">			
			<input type="text" id="buscar_factura" class="form-control pull-right" placeholder="Buscar...">
			<div class="btn-group btn-group-sm o_cp_switch_buttons" style="margin-top: 5px;">
				<div style="display: flex;">
					<button type="button" accesskey="l" aria-label="list" data-view-type="list" title="" data-view='table_despachos' class="btn btn-icon fa fa-lg fa-list-ul view-option active" data-original-title="Lista"></button>
				</div>
	        </div>
		</div>
	</div>
</div>
<div class="row row-main" style=" margin: 0; padding: 0; width: 100%">
	<div class="col-sm-12 main-page" style="margin: 0; padding: 0; z-index: 5;top: 80px;"></div>
</div>

<script type="text/javascript">
	$(document).ready(function(){
	    $.ajax({
			type: 'POST',
			data: {clave: $(this).val()},
			url: '/bodega/table_factura',
			success: function(data){
				$(".main-page").html(data);
			}
		});
	});

	$("#buscar_factura").on('keyup', function(e){
		e.preventDefault();
		$.ajax({
			type: 'POST',
			data: {clave: $(this).val()},
			url: '/bodega/table_factura',
			success: function(data){
				$(".main-page").html(data);
			}
		});
	});
</script>