            type: 'POST',
            data: {idfab: idfab},
            url: 'bodega/drop_despacho',
            success: function(data){
                $("#session_prod").html(data);
                if($("#only_one_odc").prop('checked') ){
                    $("#tbody tr a.addqq").each(function(e){
                        auxer = $(this).data();
                        if(parseInt(auxer.idof) != parseInt(obj.idof)){
                            $("#" + auxer.id).remove();
                        }
                    });
                    if(selection.length == 1){
                        selection = [];
                        obj = undefined;
                    }
