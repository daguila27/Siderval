<%
	var count = 0;
	function fechaLatino(string){
		return [string.split('-')[2],string.split('-')[1],string.split('-')[0]].join('-') 
	}
%>

<table id="despachosTable" class="o_list_view table table-condensed table-striped o_list_view_ungrouped" style="width: 100%;">
		<thead>
			<tr>
				<th class="o_column_sortable">Número de GD</th>
				<th class="o_column_sortable">Cliente</th>
				<th class="o_column_sortable">N° Items</th>
				<th class="o_column_sortable">Observación</th>
				<th class="o_column_sortable" style="text-align: center;" data-order="gd.fecha-DESC">Fecha de Despacho</th>
				<th class="o_column_sortable">Tipo</th>
				<th class="o_column_sortable" style="width:80px" >Acción</th>
			</tr>
		</thead>
	<tbody class="ui-sortable">
		<%
		for(var i=0; i < desp.length; i++){ %>
			<tr class="o_data_row" onclick="" data-idodc="">
				<td class="o_data_cell o_readonly_modifier o_required_modifier" onclick="ver_gdd(this)" data-idgd="<%= desp[i].idgd%>" ><%=desp[i].idgd%></td>
				<td class="o_data_cell o_readonly_modifier o_required_modifier" onclick="ver_gdd(this)" data-idgd="<%= desp[i].idgd%>"><%=desp[i].cliente%></td>
				<td id="est<%=desp[i].idgd%>" class="o_data_cell o_readonly_modifier o_required_modifier" onclick="ver_gdd(this)" data-idgd="<%= desp[i].idgd%>" style="text-align: center;"><%=desp[i].n_items%></td>
				<td class="o_data_cell o_readonly_modifier o_required_modifier parsear_nro" style="text-align: center;" onclick="ver_gdd(this)" data-idgd="<%=desp[i].idgd%>"><%= desp[i].obs %></td>
				<td class="o_data_cell o_readonly_modifier o_required_modifier" style="text-align: center;" onclick="ver_gdd(this)" data-idgd="<%= desp[i].idgd%>"><%=fechaLatino(new Date(desp[i].fecha).toLocaleDateString())%></td>
				<td id="est<%=desp[i].idgd%>" class="o_data_cell o_readonly_modifier o_required_modifier" onclick="ver_gdd(this)" data-idgd="<%= desp[i].idgd%>" style="text-align: center;"><%=desp[i].estado%></td>
				<td class="o_data_cell o_readonly_modifier o_required_modifier" style="text-align: center;">
					<%if(desp[i].estado != 'Anulado'){%>
						<div id="btns<%=desp[i].idgd%>">
							<%if(desp[i].estado == 'Blanco'){%>
								<a class="btn btn-xs btn-info" onclick="activarGD(this)" data-id="<%=desp[i].idgd%>">AC</a>
							<%}else{%>
								<a class="btn btn-xs btn-success genguia" onclick="getxlsx(this)" data-id="<%=desp[i].idgd%>">GD</a>
							<%}%>
							<a class="btn btn-xs btn-danger anular" onclick="anulate(this)" data-id="<%=desp[i].idgd%>"><i class="fa fa-ban"></i></a>
						</div>
					<%} %>
				</td>
			</tr>
		<% } %>
	</tbody>
	<tfoot>
		<tr>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
		</tr>
	</tfoot>
</table>

<!-- Oculta cantidad de datos, va al final para contar la cantidad de materiales -->
