        $.ajax({
            type: 'GET',
            url: '/matprimas/crear_movimiento_vista/'+seleccionados.join('-'),
            beforeSend: function(){
                destroyDataTable();
            },
            success: function(data){
                ocultar_buscador();
                $(".main-page").html(data);
            }
        });
    }


</script>