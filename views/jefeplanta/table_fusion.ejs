    function parsear_nro(x, cs){
        var parts = x.toString().split(".");
        parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ".");
        if(parts.length > 1){
            if(parts[1].length >= cs){
                parts[1] = parts[1].substring(0,cs);
            }
            else{
                parts[1] = parts[1]+'0'.repeat(cs-parts[1].length);
            }
        }
        else{
            parts[1] = '0'.repeat(cs);
        }
        var num;

        if(cs === 0){
            num =  parts[0];
        }
        else{
            num =  parts.join(",");
        }
        return num;
    }


