    function refreshSumas(){
        var body_p = 0;
        var body_k = 0;
        var no_p = true;
        var no_k = true;
        $(".body_p").each(function(){
            if($(this).parent().hasClass('danger')){
                body_p += $(this).data('val');
                no_p = false;
            }
        });
        $(".body_k").each(function(){
            if($(this).parent().hasClass('danger')) {
                body_k += $(this).data('val');
                no_k = false;
            }
        });

        if( no_p || no_k ){
            $("#footer_pt").html(parsear_nro(total_peso));
            $("#footer_kt").html(parsear_nro(total_piezas));
        }
        else{
            $("#footer_pt").html(parsear_nro(body_p));
            $("#footer_kt").html(parsear_nro(body_k));
        }

    }
