    function parsear_nro(x){
        var parts = x.toString().split(".");
        parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ".");
        if(parts.length > 1){
            if(parts[1].length > 2){
                parts[1] = parts[1].substring(0,1);
            }
        }
        var num =  parts.join(",");
        return num;
