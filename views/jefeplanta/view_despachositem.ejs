<script type="text/javascript">
    var array_fill = [
        "GD@default",
        "OC@primary",
        "Detalle@success",
        "Cliente@success"
    ];

    var busc = new Buscador("buscar_despachositem", ".o_searchview", array_fill, "/jefeplanta/table_despachositem", "DataTableDesp", false, true, ".date-fill","gd.fecha");

    if('<%= tab%>' == 'funds'){
        busc.add_cond = "(material.codigo LIKE 'P%' AND material.detalle NOT LIKE '%ceramico%')@gd.estado!='Anulado'";
    }
    else{
        busc.add_cond = "(material.codigo NOT LIKE 'P%' OR material.detalle LIKE '%ceramico%')@gd.estado!='Anulado'";
    }
    $(document).ready(function(){
        $(".up-fills").css('margin-top', $("#oe_main_menu_navbar").outerHeight());
        $(".setdates-buttons.mes").click();
        //busc.buscar_action();
    });


    function getRidOffAutocomplete(){
        var timer = window.setTimeout( function(){
            $('#buscar_despachositem-value, #buscar_despachositem').prop('disabled',false);
            clearTimeout(timer);
        }, 800);
    }

    // Invoke the function
    getRidOffAutocomplete();

</script>



