<div class="row">
    <div class="col-md-3">
        <div class="mycontent-left">
            <h3>
                <label for="of">
                    OP: <small style="font-size: 16px"><%= data.idordenproduccion%></small>
                </label>
            </h3>
            <h3>
                <label for="of">
                    OCA: <small style="font-size: 16px"><%= data.idoda%></small>
                </label>
            </h3>
        </div>
    </div>
    <div class="col-md-9">
        <div class="mycontent-right">
            <h3>
                <label>
                    Rechazando: <small style="font-size: 16px"> <%= cant%> unidades de <%= data.detalle%></small>
                </label>
            </h3>
            <h3>
                <label>
                    Proveedor: <small style="font-size: 16px"><%= data.cliente%></small>
                </label>
            </h3>
        </div>
    </div>
</div>
<style>
    .mycontent-right {
        border-left: 1px dashed rgb(124,123,173);
        padding-left: 25px;
    }
</style>
<label style="margin-top: 20px">
    Comentario del Rechazo:
</label>
<p style="margin-left: 40px">
    <%= comentario%>
</p>
<label style="margin-top: 20px">¿Qué desea hacer?</label>
<div class="radio" style="margin-left: 40px">
    <label><input type="radio" class="optradio" name="optradio" id="comAbast" checked>Anular entrada de productos y comunicar a Abastecimiento</label>
</div>
<div class="radio" style="margin-left: 40px">
    <label><input type="radio" class="optradio" name="optradio">Otras Opciones</label>
</div>
<div class="form-group msgRech" style="margin-top: 20px">
    <label for="comentRech">Ingrese Comentario:</label>
    <textarea class="form-control" id="comentRech" rows="3"></textarea>
</div>

<script>
    $(".optradio").on('change', function(e){
        e.preventDefault();
        if($("#comAbast").is(':checked')){
            $(".msgRech").removeClass('hidden');
            $("#botonContinuarModal").html("Enviar");
            $("#botonContinuarModal").data("cont", '0');
        }else{
            $(".msgRech").addClass('hidden');
            $("#botonContinuarModal").html("Continuar");
            $("#botonContinuarModal").data("cont", '1');
        }
    });
</script>