<div class="row row-main" style=" margin: 0; padding: 0;">
    <div class="col-sm-12 main-page" style="margin: 0; padding: 0; z-index: 5;">
        <div class="o_control_panel">
            <ol class="breadcrumb" style="width: 50%; padding: 10px 2px 0px 20px">
                <li class="active">Historial de Producción</li>
            </ol>
        </div>
        <%
        function fechaLatino(string){
            if(string.split('-').length == 3){
                return [string.split('-')[2],string.split('-')[1],string.split('-')[0]].join('-');
            }
            else{
                return [string.split('/')[1],string.split('/')[0],string.split('/')[2]].join('/');
            }
        }

        %>
        <!-- Oculta cantidad de datos -->
        <div id="registros" style="display: none"></div>

        <table id="phtable" class="o_list_view table table-condensed table-striped o_list_view_ungrouped" style="margin:0; padding: 0;width: 100%;">
            <thead>

            <tr>
                <th data-toggle="tooltip" data-placement="bottom" style="text-align: center">Detalle</th>
                <th data-toggle="tooltip" data-placement="bottom" style="text-align: center">Cantidad</th>
                <th data-toggle="tooltip" data-placement="bottom" style="text-align: center">Desde</th>
                <th data-toggle="tooltip" data-placement="bottom" style="text-align: center">Hacia</th>
                <th data-toggle="tooltip" data-placement="bottom" style="text-align: center">Fecha</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<style type="text/css">
    .caption a:hover{
        cursor:pointer;
    }
</style>
